---
import Layout from '../layouts/Layout.astro';

interface Props {
  title: string;
  currentPage: 'episodes' | 'users' | 'create' | 'tools';
}

const { title, currentPage } = Astro.props;
---

<Layout title={title}>
  <div class="admin-wrapper">
    <nav class="admin-nav">
      <ul>
        <li>
          <a href="/admin/episodes" class:list={['nav-link', { active: currentPage === 'episodes' }]}>
            Episodes
          </a>
        </li>
        <li>
          <a href="/admin/users" class:list={['nav-link', { active: currentPage === 'users' }]}>
            Users
          </a>
        </li>
        <li>
          <a href="/admin/create" class:list={['nav-link', { active: currentPage === 'create' }]}>
            Create
          </a>
        </li>
        <li>
          <a href="/admin/tools" class:list={['nav-link', { active: currentPage === 'tools' }]}>
            Tools
          </a>
        </li>
      </ul>
    </nav>

    <div class="admin-content">
      <slot />
    </div>
  </div>
</Layout>

<style is:global>
  .admin-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 2rem 1rem;
  }

  .admin-nav {
    position: sticky;
    top: 2rem;
    height: fit-content;
  }

  .admin-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .admin-nav li {
    margin-bottom: 0.5rem;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 1rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
  }

  .nav-link:hover {
    background: var(--bg-card);
  }

  .nav-link.active {
    background: var(--accent);
    color: white;
  }

  .admin-content {
    min-width: 0; /* Prevents grid blowout */
  }

  @media (max-width: 768px) {
    .admin-wrapper {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .admin-nav {
      position: static;
    }

    .admin-nav ul {
      display: flex;
      gap: 0.5rem;
    }
  }
</style>
